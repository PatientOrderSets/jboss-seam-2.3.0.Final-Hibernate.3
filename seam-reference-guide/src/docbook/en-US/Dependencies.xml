      <url>http://repository.jboss.org/nexus/content/groups/public</url>
    </repository>
  </repositories>

  <dependencyManagement>
     <dependencies>
        <dependency>
           <groupId>org.jboss.seam</groupId>
           <artifactId>bom</artifactId>
           <version>2.3.0.Final</version>
           <type>pom</type>
           <scope>import</scope>
         </dependency>
      </dependencies>
  </dependencyManagement>

  <dependencies>

    <dependency>
      <groupId>org.hibernate</groupId>
