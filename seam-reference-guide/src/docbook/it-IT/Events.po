#: Events.xml:425
#, no-c-format
msgid "Or even:"
msgstr "Od anche:"

#. Tag: programlisting
#: Events.xml:429
#, no-c-format
msgid ""
"<![CDATA[<page view-id=\"/editDocument.xhtml\">\n"
"    \n"
"    <navigation from-action=\"#{documentEditor.update}\">\n"
"        <rule if=\"#{documentEditor.errors.empty}\">\n"
"            <redirect view-id=\"/viewDocument.xhtml\"/>\n"
"        </rule>\n"
"    </navigation>\n"
"    \n"
"</page>]]>"
msgstr ""
"<![CDATA[<page view-id=\"/editDocument.xhtml\">\n"
"    \n"
"    <navigation from-action=\"#{documentEditor.update}\">\n"
"        <rule if=\"#{documentEditor.errors.empty}\">\n"
"            <redirect view-id=\"/viewDocument.xhtml\"/>\n"
"        </rule>\n"
"    </navigation>\n"
"    \n"
