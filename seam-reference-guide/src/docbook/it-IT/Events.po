"    \n"
"    <navigation from-action=\"#{documentEditor.update}\">\n"
"        <rule if=\"#{documentEditor.errors.empty}\">\n"
"            <end-conversation/>\n"
"            <redirect view-id=\"/viewDocument.xhtml\"/>\n"
"        </rule>\n"
"    </navigation>\n"
"    \n"
